<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/applicationLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/note_list_fragment"
        android:name="com.github.simplenotes.NotesListFragment"></fragment>
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/note_content_fragment"
        android:name="com.github.simplenotes.NoteContentFragment"></fragment>
</LinearLayout>
